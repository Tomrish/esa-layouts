{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "restreamItem": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "address": {
          "type": "string"
        },
        "key": {
          "type": "string"
        }
      },
      "required": [
        "address",
        "key"
      ]
    }
  },
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "useTestData": {
      "type": "boolean",
      "default": false
    },
    "event": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "theme": {
          "type": "string",
          "$comment": "Theme to be used in the graphical overlays; will use default if none supplied."
        },
        "shorts": {
          "$comment": "This/these must match the tracker, if that feature is enabled.",
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              },
              "uniqueItems": true,
              "minItems": 1,
              "maxItems": 2
            }
          ],
          "default": "EVENT_SHORT"
        },
        "thisEvent": {
          "type": "number",
          "$comment": "If the 'event' has multiple tracker events, this a 1-indexed value of which one is applicable to this stream from the shorts array.",
          "minimum": 1,
          "maximum": 2,
          "default": 1
        },
        "online": {
          "$comment": "If this event is ran online and has no on-site presence.",
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "$comment": "If set to 'partial', will only do basic changes.",
              "type": "string",
              "enum": [
                "partial",
                "full"
              ]
            }
          ],
          "default": false
        }
      },
      "required": [
        "shorts",
        "thisEvent",
        "online"
      ]
    },
    "streamdeck": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": true
        },
        "port": {
          "type": "number",
          "default": 9091
        },
        "key": {
          "type": "string",
          "default": "DEFAULT_KEY"
        },
        "debug": {
          "type": "boolean",
          "default": false
        }
      },
      "required": [
        "enable",
        "port",
        "key",
        "debug"
      ]
    },
    "rabbitmq": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": true
        },
        "protocol": {
          "type": "string",
          "default": "amqps"
        },
        "hostname": {
          "type": "string",
          "default": "mq.esamarathon.com"
        },
        "username": {
          "type": "string",
          "default": "USERNAME"
        },
        "password": {
          "type": "string",
          "default": "PASSWORD"
        },
        "vhost": {
          "type": "string",
          "default": "esa_prod"
        }
      },
      "required": [
        "enable",
        "protocol",
        "hostname",
        "username",
        "password",
        "vhost"
      ]
    },
    "restream": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": false
        },
        "instances": {
          "oneOf": [
            {
              "$ref": "#/definitions/restreamItem"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/restreamItem"
              },
              "uniqueItems": true,
              "minItems": 1,
              "maxItems": 2
            }
          ],
          "default": {
            "address": "localhost:1234",
            "key": "DEFAULT_KEY"
          }
        }
      },
      "required": [
        "enable",
        "instances"
      ]
    },
    "obs": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": true
        },
        "address": {
          "type": "string",
          "default": "localhost:4444"
        },
        "password": {
          "type": "string",
          "default": ""
        },
        "names": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "scenes": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "commercials": {
                  "type": "string",
                  "default": "Intermission (commercials)"
                },
                "gameLayout": {
                  "type": "string",
                  "default": "Game Layout"
                },
                "intermission": {
                  "type": "string",
                  "default": "Intermission"
                },
                "videoPlayer": {
                  "type": "string",
                  "default": "Video Player"
                },
                "countdown": {
                  "type": "string",
                  "default": "Countdown"
                }
              },
              "required": [
                "commercials",
                "gameLayout",
                "intermission",
                "videoPlayer",
                "countdown"
              ]
            },
            "sources": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "gameCapture1": {
                  "type": "string",
                  "default": "Game Capture 1"
                },
                "gameCapture2": {
                  "type": "string",
                  "default": "Game Capture 2"
                },
                "gameCapture3": {
                  "type": "string",
                  "default": "Game Capture 3"
                },
                "gameCapture4": {
                  "type": "string",
                  "default": "Game Capture 4"
                },
                "cameraCapture1": {
                  "type": "string",
                  "default": "Camera Capture 1"
                },
                "cameraCapture2": {
                  "type": "string",
                  "default": "Camera Capture 2"
                },
                "restreamSources": {
                  "oneOf": [
                    {
                      "type": "string"
                    },
                    {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "uniqueItems": true,
                      "minItems": 1,
                      "maxItems": 2
                    }
                  ],
                  "default": "Restream Source"
                }
              },
              "required": [
                "gameCapture1",
                "gameCapture2",
                "gameCapture3",
                "gameCapture4",
                "cameraCapture1",
                "cameraCapture2",
                "restreamSources"
              ]
            }
          },
          "required": [
            "scenes",
            "sources"
          ]
        }
      },
      "required": [
        "enable",
        "address",
        "password",
        "names"
      ]
    },
    "music": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": true
        },
        "address": {
          "type": "string",
          "default": "localhost:8880"
        },
        "username": {
          "type": "string",
          "default": ""
        },
        "password": {
          "type": "string",
          "default": ""
        }
      },
      "required": [
        "enable",
        "address",
        "username",
        "password"
      ]
    },
    "x32": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": true
        },
        "ip": {
          "type": "string",
          "default": "10.20.30.42"
        },
        "localPort": {
          "type": "number",
          "default": 52361
        }
      },
      "required": [
        "enable",
        "ip",
        "localPort"
      ]
    },
    "tracker": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": true
        },
        "address": {
          "type": "string",
          "default": "donations.esamarathon.com"
        },
        "username": {
          "type": "string",
          "default": "USERNAME"
        },
        "password": {
          "type": "string",
          "default": "PASSWORD"
        }
      },
      "required": [
        "enable",
        "address",
        "username",
        "password"
      ]
    },
    "tts": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": false
        },
        "voiceAPI": {
          "type": "string",
          "default": "URL"
        }
      },
      "required": [
        "enable",
        "voiceAPI"
      ]
    },
    "twitchExt": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": false
        },
        "token": {
          "type": "string",
          "default": "TOKEN"
        }
      },
      "required": [
        "enable",
        "token"
      ]
    },
    "obsn": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": true
        },
        "buffer": {
          "type": "number",
          "default": 0
        }
      },
      "required": [
        "enable",
        "buffer"
      ]
    }
  },
  "required": [
    "useTestData",
    "event",
    "streamdeck",
    "rabbitmq",
    "restream",
    "obs",
    "music",
    "x32",
    "tracker",
    "tts",
    "twitchExt",
    "obsn"
  ]
}